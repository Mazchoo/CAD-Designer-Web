{
  "name": "cad-designer-web",
  "version": "1.0.0",
  "description": "An editor for cad files in  json form that uses Web GPU and Web assembly for drawing.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "build-debug": "rollup -c -n debug",
    "prettier-check": "prettier . --config ./.prettierrc.json --check",
    "prettier-write": "prettier . --config ./.prettierrc.json --write",
    "server-release": "rollup -c && servez --port=23592 .",
    "server-debug": "rollup -c -n debug && servez --port=23592 .",
    "build-rust": "cd ./wasm-model && wasm-pack build --target web",
    "format-rust": "cd ./wasm-model && cargo fmt -v",
    "test-rust": "cd ./wasm-model && cargo test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mazchoo/CAD-Designer-Web.git"
  },
  "keywords": [
    "cad",
    "web-gpu",
    "json"
  ],
  "author": "Matthew Mitchell",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Mazchoo/CAD-Designer-Web/issues"
  },
  "homepage": "https://github.com/Mazchoo/CAD-Designer-Web#readme",
  "dependencies": {
    "fabric": "6.6.6",
    "showdown": "2.1.0",
    "stats.js": "0.16.0",
    "wgpu-matrix": "3.4.0"
  },
  "devDependencies": {
    "@babel/runtime": "7.27.4",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.2",
    "@rollup/plugin-wasm": "6.2.2",
    "@tsconfig/recommended": "1.0.8",
    "@types/showdown": "2.0.6",
    "@types/stats.js": "0.17.4",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@webgpu/types": "0.1.61",
    "@types/fabric": "5.3.10",
    "glob": "11.0.2",
    "prettier": "3.5.3",
    "rollup": "4.41.1",
    "rollup-plugin-copy": "3.5.0",
    "servez": "2.3.0",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "webgpu": "0.2.12"
  }
}
